# Copy to .env and set your token from Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token_here

# Optional: logging level (DEBUG, INFO, WARNING, ERROR) and log file path
# LOG_LEVEL=INFO
# LOG_FILE=watson.log

# Optional: directory for temp WAV and transcript files (default: system temp/watson)
# WATSON_TEMP_DIR=/tmp/watson

# Optional: max recording length in minutes (default 30); recording stops after this, use !record again for a new segment
# RECORDING_MAX_MINUTES=30

# Optional: Whisper transcription â€” language code (e.g. ru, en) and beam_size (default 5)
# TRANSCRIPT_LANGUAGE=ru
# TRANSCRIPT_BEAM_SIZE=5
